<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.Sales.SalesJadwalFormActivity"
    tools:showIn="@layout/activity_sales_jadwal_form">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/SalesbtnSimpanAddComplain"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="4sp"
                android:text="@string/nama_customer"
                android:textColor="@color/colordasar"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/namaCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/border_blue"
                android:padding="4dp"
                android:text="PT ABC2"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="4sp"
                android:text="Tanggal"
                android:textColor="@color/colordasar"
                android:textSize="15sp" />
            <TextView
                android:layout_margin="8dp"

                android:id="@+id/SalesUpdateTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="4sp"
                android:text="15-03-2019"
                android:textColor="#000"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="4sp"
                android:text="Jam Mulai"
                android:textColor="@color/colordasar"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/SalesUpdateJamMulai"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="4sp"
                android:text="09.00"
                android:textColor="#000"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="4sp"
                android:text="Jam Selesai"
                android:textColor="@color/colordasar"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/SalesUpdateJamSelesai"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="4sp"
                android:text="09.30"
                android:textColor="#000"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colordasar"
            android:padding="15dp"
            android:text="Simpan"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>